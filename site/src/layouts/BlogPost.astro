---
import Base from './Base.astro';

interface Props {
  title: string;
  subtitle?: string;
  date: Date;
  author: string;
}

const { title, subtitle, date, author } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Base title={`${title} — Claude Code Guardrails`} description={subtitle}>
  <article class="container" style="padding-top: 8rem; padding-bottom: 4rem;">
    <header style="margin-bottom: 3rem; text-align: center;">
      <a href="/blog" class="back-link" style="font-family: var(--font-mono); font-size: 0.85rem; color: var(--text-secondary); display: inline-block; margin-bottom: 2rem;">
        &larr; Back to blog
      </a>
      <h1 style="margin-bottom: 0.75rem;">{title}</h1>
      {subtitle && <p style="color: var(--text-secondary); font-size: 1.15rem; max-width: 60ch; margin: 0 auto;">{subtitle}</p>}
      <div style="margin-top: 1.5rem; font-family: var(--font-mono); font-size: 0.85rem; color: var(--text-muted);">
        <time datetime={date.toISOString()}>{formattedDate}</time>
        <span style="margin: 0 0.5rem;">·</span>
        <span>{author}</span>
      </div>
    </header>
    <div class="prose">
      <slot />
    </div>
  </article>
</Base>
